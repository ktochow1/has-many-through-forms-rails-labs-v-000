<%= form_for(@post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_area :content %>

    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
      <%= b.label %>
      <%= b.check_box %>
    <%end%>

  <%= f.fields_for(:categories, @post.categories.build) do |category_builder| %>
    <%= category_builder.text_field :name %>
  <% end %>

<%= f.submit%>
<%end%>
